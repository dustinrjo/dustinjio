
@require '_settings'

html, body
  background-color ghost


.vid-container
  padding 1.5em 0em
  display block
  margin auto
  max-width 600px
  max-height 338px

.img-div
  width 100%
  text-align center
  img
    display block
    margin auto
    padding 2%
    max-width 96%
    margin auto
    padding 3em
    max-width 75%
    &.img-fold
      display inline-block
      padding 1em .5em
      text-align center


#skills-tag-container
  text-align center
  margin-top 3em

#code, #recently
  padding-top 4.5em


#code


  cite
    margin auto
    display block
    text-align center


nav.social
  background white
  ul
    max-width 768px
    width 75%
    margin 0em auto 4em auto
    cf()
  li
    display block
    height 100px
    span(1/10)
    display table
    table-layout fixed
    a
      color black
      display table-cell
      vertical-align middle
      text-align center
      width 100%
      &:hover
        color grey


+below(mobile)
  nav.social, nav.social-2
    li
      span(1/4)
      background none
+above(mobile)
  nav.social, nav.social-2
    .telephone
      display none

.headshot
  display block
  margin auto
  // height 120px
  // padding 1em


#agency-img
#dev-img
#product-img
  width 100%
  min-height 200px
  background-position center
  background-position 20% 50%
  background-size cover

#dev-img
  background-image url("../img/bg/code.png")

#product-img
  background-image url("../img/bg/team.png")

#agency-img
  background-image url("../img/agency.jpg")



#brands

  center(760px, 0em)

  aside
    width 80%
    max-width 800px
    margin auto


  em
    color red
    font-size 2em

.small-images
  display block
  cf()
  a
    text-decoration none
    display block
    col(1/6, cycle:6)
    +below(tablet-portrait)

      col(1/4, cycle:4, uncycle:6)
    +below(mobile)
      col(1/3, cycle:3, uncycle:4)


    margin-bottom 1em

    img

      border 1px solid #d7d7d7
      padding 1.5em

      filter url(filters.svg#grayscale)
      filter gray
      -webkit-filter grayscale(1)
      // display inline-block
      // margin 3%
      width 100%
      max-height 109px
      // width 12px
      // height 12px
      &:hover
        filter none
        -webkit-filter grayscale(0)

#teampics
  width 98%
  display block
  text-align center
  width 96%
  display block
  text-align center
  img
    display inline-block
    margin 2%
    max-width 20%
    display inline-block
    margin 3%
    max-width 25%

#functional-spec
  max-width 760px
  margin auto
  text-align center
  max-width 760px
  margin auto
  text-align center
  img
    margin .5%
    width 19%

figcaption
  text-align center
  font-weight 300
  margin-bottom 1.5em

#done-list
  padding 0em
  max-width 760px
  margin auto
  padding 1.5em 0em 2em 2em
  padding 1.5em 0em 2em 2em
  padding 1.5em 0em 2em 2em
  li
    margin 1em 0em
    margin 1em
    margin 1em
    margin 1em
    &:before
      content "\e606"
      font-family 'icomoon'
      position absolute
      margin-left -2em
      margin-top 2px

footer
  background #3a3a3a
  color white
  font-size 0.7em
  letter-spacing 3px
  text-align center
  text-transform uppercase
  p
    text-align center
    width 69%
    display inline-block
    padding-left 10%
    padding-right 10%
    display inline-block
    width 30%
    max-width 300px
    vertical-align middle
    text-align center
    padding-left 0%
    padding-right 0%
    width 30%
    max-width 900px
    vertical-align middle
    text-align center
    display inline-block
    padding 0.5em 0em
  address
    padding 2em 0em
    width 100%
    padding 0px
    margin 0px

#back-btn
  bottom 4.3em
  display none
  position fixed
  right 0px
  display block
  bottom 10.3em
  bottom 4.3em
  a
    padding .8em
    background rgba(0, 0, 0, 0.1)
    text-decoration none
    color white
    font-size .8em
    font-weight 400
    display block
    &:hover
      background lightseagreen


+above(mobile)
  section aside
    width 100%

  header
    // margin-top 5em
    ul
      float right
      text-align right
      margin-right 1%
    li
      display inline-block
      a
        border-radius 2px

+above(1200px)
  footer
    padding 0px
+above(1439px)
  #nav-btns
    max-width 40%
    float left
    position absolute
    left 2%
    top 55px
    text-align left
    margin auto
