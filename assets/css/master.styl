@import '_settings'
@import '_typography'
@import '_index'




+below(1024px)
  body
    background olive


header
  padding 2em 0em
  background white

.single
  height 200px
  col(1/2, cycle:2)
  background pink
  &.red
    background red

// ----------------
// Grid
// ----------------

.center-constrained
  center(1200px, 3em)


section, .grid
  cf()

  h3
    color lighten(black, 40%)

  h3, .description
    text-align center

  article
    col(1/3, cycle:3, gutter: 5)
    +below(tablet)
      stack()
    &:last-child
      shift(1/3)
    h3
      font-family 'Lato'
      font-weight 700
      font-size 1rem
      line-height 1.8






.grid
  .third
  .quarter
  .half
  .full
    img
      max-width: 100%

  .third
    col(1/3, cycle:3)
  .quarter
    col(1/4, cycle:4)
  .half
    col(1/2, cycle:2)

.image-grid
  // cf()
  max-width 1200px
  width 70%
  margin-left auto
  margin-right auto
  // .third
  // .quarter
  // .half
  // .full
  img
    max-width: 100%
    display block

  .two-third
    col(2/3, cycle:1, gutter: 0.5)
  .one-third
    col(1/3, cycle:1, gutter: 0.5)
  .third
    col(1/3, cycle:3, gutter: 0.5)
  .quarter
    col(1/4, cycle:4, gutter: 0.5)
  .half
    col(1/2, cycle:2, gutter: 0.5)

  background ghostwhite
  figure
    margin 0px
  figcaption, .fig-label
    background white
    padding 1em
    line-height 1.2

section.intro
  background white
  padding-top 0px

figure.full-wide
  max-width 80%
  margin auto
  img
    max-width 100%

img.full-bleed
  max-width 100%

.dev-award
  width 200px
.awwward
  width 200px

.justin-wine
  text-align center
  // cf()
  img
    &.iphone
      max-height 570px
      max-width 24%
    &.ibm
      max-width 40%
    &.tablet
      max-width 50%
