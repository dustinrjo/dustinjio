@import '_settings'



normalize-css()
base()

body
  padding 50px
  font-family 'brand-serif'
  p
    line-height 1.5


+below(1024px)
  body
    background olive

.single
  height 200px
  col(1/2, cycle:2)
  background pink
  &.red
    background red

h1, h2, h3
  font-family 'Lato'
  font-weight 700

h2
  text-align center
  display block
  margin .8em auto
  max-width 23em

section, .grid
  cf()
  article
    col(1/3, cycle:3)


