
@require '_settings'

normalize-css()
base()
*
  box-sizing border-box


html, body
  font-family 'brand-serif'
  padding 0px
  margin 0px
  p
    line-height 1.6

a
  font-family 'lato'
  font-weight 400
  text-decoration none
  color light-grey
  // font-weight 600

  &:hover
    color pink




h1, h2
  font-family brand-serif
  font-weight normal

h1, h1 a
  font-weight 700
  font-size 1.2rem
  line-height 1.5
  font-family brand-serif
  font-size 1.8em
  line-height 2

h1
  width 100%
  max-width 760px
  color #3a3a3a
  margin auto
  text-align center
  a
    color firebrick
    text-decoration none
    text-transform none
    letter-spacing 0px
    display inline-block
    font-size 1em

h2
  font-family 'brand-serif'
  font-weight 700
  font-size 2rem
  text-align center
  display block
  margin .5em auto 1.5em auto
  max-width 23em
  // font-weight 700

h3
  font-family 'Lato'
  font-size 2em
  font-weight 300

ul
  list-style-type none
  padding 0px
  margin 0px
  display block
  width 100%
  a
    text-decoration none


dl
  // col(1/3, cycle:3, gutter:5)
  display inline-block
  padding-right 2.5%
  padding-left 2.5%
  padding-bottom 2.5%
  // &:last-child

  max-width 33%
  vertical-align top
  text-align center

dt
  margin-bottom .75rem
  font-weight 900
  letter-spacing 3px
  text-align center
  font-size .9em
  text-transform uppercase
  padding-bottom 1.2em
  border-bottom 1px solid #c8c8c8





dd
  display inline-block
  padding 0px 0px
  margin 0px
  a
    letter-spacing 1px
    text-transform uppercase
    font-size .75rem
    display inline-block
    padding 0em 3px
    line-height 1.9


section
  padding 2em 0px

  p
    width 100%
    max-width 760px
    margin auto
    padding 0em 0em 2em 0em

