
@require '_settings'


@font-face
  font-family 'web_symbols_ligaregular'
  src url("fonts/websymbolsliga-regular-webfont.eot")
  src url("fonts/websymbolsliga-regular-webfont.eot?#iefix") format("embedded-opentype"), url("fonts/websymbolsliga-regular-webfont.woff") format("woff"), url("fonts/websymbolsliga-regular-webfont.ttf") format("truetype"), url("fonts/websymbolsliga-regular-webfont.svg#web_symbols_ligaregular") format("svg")
  font-weight normal
  font-style normal

html, body
  font-family 'brand-serif'
  background-color #eeeeee
  padding 0px
  margin 0px

.vid-container
  padding 1.5em 0em
  display block
  margin auto
  max-width 600px
  max-height 338px

.img-div
  width 100%
  text-align center
  img
    display block
    margin auto
    padding 2%
    max-width 96%
    margin auto
    padding 3em
    max-width 75%

.img-fold
  display inline-block
  margin auto
  padding 2%
  max-width 96%
  display inline-block !important
  margin auto
  padding 1em .5em !important
  max-width 96% !important
  text-align center !important

ul
  list-style-type none
  padding 0px
  margin 0px
  display block
  width 100%
  a
    text-decoration none

#skills-tag-container
  width 100%
  max-width 960px
  text-align center
  margin-top 3em

dl
  display inline-block
  padding-right 2.5%
  padding-bottom 2.5%
  max-width 295px
  vertical-align top
  text-align center

dt
  margin-bottom .75rem
  font-weight 900
  letter-spacing 3px
  text-align center
  font-size .9em
  text-transform uppercase
  padding-bottom 1.2em
  border-bottom 1px solid #c8c8c8

dd
  display inline-block
  border-radius 4px
  background-color #dedede
  padding 0px 0px
  margin .3em .2em
  &:hover
    background-color #ffd119
  a
    text-decoration none
    color #3a3a3a
    font-weight 600
    font-size .75rem
    display block
    padding 0.5em .75em

.icon-set
  width 12%
  max-width 181px
  text-align center
  float right
  position absolute
  right 0px
  top 0px
  margin .5em 2%
  margin .5em 2%
  width 30%
  max-width 181px
  top 55px


.headshot
  display block
  margin auto
  height 120px
  padding 1em

.main-title
  color #3a3a3a
  font-size 1em
  letter-spacing 3px
  max-width 250px
  display block
  margin auto
  text-align center
  padding 1em 0em
  max-width 100%

.logo-box
  width 300px
  min-height 214px
  margin auto

.nav-button
  background-color mediumseagreen
  padding 1.2em
  margin 2px 0px
  text-align center
  width 100%
  display inline-block
  box-sizing border-box
  color white
  font-size .8em
  letter-spacing 2px
  font-weight 600
  text-decoration none
  width 13em
  padding 1.2em 1.5em
  font-size .65em
  width 100%
  &:hover
    background-color #3a3a3a

#dev-img
  width 100%
  min-height 200px
  background-image url("../img/bg/code.png")
  background-position center
  background-position 20% 50%

#product-img
  width 100%
  min-height 200px
  background-image url("../img/bg/team.png")
  background-position center
  background-position 20% 50%

section
  padding 2em 4%
  // background-color #fbd71f
  p
    width 100%
    max-width 760px
    margin auto
    padding 1.5em 0em 2em 0em
  h1
    width 100%
    max-width 760px
    color #3a3a3a
    font-size 1.2rem
    text-transform uppercase
    letter-spacing 3px
    margin auto
    padding 2em 0em 0em 0em
    line-height 1.5
    text-align center
  aside
    width 80%
    max-width 800px
    margin auto
  em
    color red
    font-size 2em

.small-images
  width 98%
  max-width 650px
  display block
  text-align center
  a
    text-decoration none
    img
      filter url(filters.svg#grayscale)
      filter gray
      -webkit-filter grayscale(1)
      display inline-block
      margin 3%
      max-width 20%
      border 1px solid #d7d7d7
      padding 1.5em
      width 50px
      &:hover
        filter none
        -webkit-filter grayscale(0)

#teampics
  width 98%
  display block
  text-align center
  width 96%
  display block
  text-align center
  img
    display inline-block
    margin 2%
    max-width 20%
    display inline-block
    margin 3%
    max-width 25%

#functional-spec
  max-width 760px
  margin auto
  text-align center
  max-width 760px
  margin auto
  text-align center
  img
    margin .5%
    width 19%

figcaption
  text-align center
  font-weight 300
  margin-bottom 1.5em

#done-list
  padding 0em
  max-width 760px
  margin auto
  padding 1.5em 0em 2em 2em
  padding 1.5em 0em 2em 2em
  padding 1.5em 0em 2em 2em
  li
    margin 1em 0em
    margin 1em
    margin 1em
    margin 1em
    &:before
      content "\00d7"
      font-family 'web_symbols_ligaregular'
      position absolute
      margin-left -2em
      margin-top 2px

footer
  background #3a3a3a
  color white
  font-size 0.7em
  letter-spacing 3px
  text-align center
  text-transform uppercase
  p
    text-align center
    width 69%
    display inline-block
    padding-left 10%
    padding-right 10%
    display inline-block
    width 30%
    max-width 300px
    vertical-align middle
    text-align center
    padding-left 0%
    padding-right 0%
    width 30%
    max-width 900px
    vertical-align middle
    text-align center
    display inline-block
    padding 0.5em 0em
  address
    padding 2em 0em
    width 100%
    padding 0px
    margin 0px

#back-btn
  bottom 4.3em
  display none
  position fixed
  right 0px
  display block
  bottom 10.3em
  bottom 4.3em
  a
    padding .8em
    background rgba(0, 0, 0, 0.1)
    text-decoration none
    color white
    font-size .8em
    font-weight 400
    display block
    &:hover
      background green

