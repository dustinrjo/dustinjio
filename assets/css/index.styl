+above(mobile)
  section aside
    width 100%

  header
    ul
      float right
      text-align right
      margin-right 1%
    li
      display inline-block
      a
        border-radius 2px

  #nav-btns
    max-width 6em
    float left
    position absolute
    left 15px
    top 15px
    text-align left
    margin auto

+above(tablet)

  #nav-btns
    max-width 40%
    float left
    position absolute
    left 2%
    top 55px
    text-align left
    margin auto

+above(1200px)
  footer
    padding 0px
+above(1439px)
  #nav-btns
    max-width 40%
    float left
    position absolute
    left 2%
    top 55px
    text-align left
    margin auto
