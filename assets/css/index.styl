
@require '_settings'


@font-face
  font-family 'web_symbols_ligaregular'
  src url("fonts/websymbolsliga-regular-webfont.eot")
  src url("fonts/websymbolsliga-regular-webfont.eot?#iefix") format("embedded-opentype"), url("fonts/websymbolsliga-regular-webfont.woff") format("woff"), url("fonts/websymbolsliga-regular-webfont.ttf") format("truetype"), url("fonts/websymbolsliga-regular-webfont.svg#web_symbols_ligaregular") format("svg")
  font-weight normal
  font-style normal

html, body
  font-family 'brand-serif'
  // background-color #eeeeee
  background-color ghost



  padding 0px
  margin 0px

.vid-container
  padding 1.5em 0em
  display block
  margin auto
  max-width 600px
  max-height 338px

.img-div
  width 100%
  text-align center
  img
    display block
    margin auto
    padding 2%
    max-width 96%
    margin auto
    padding 3em
    max-width 75%

.img-fold
  display inline-block
  margin auto
  padding 2%
  max-width 96%
  display inline-block !important
  margin auto
  padding 1em .5em !important
  max-width 96% !important
  text-align center !important

ul
  list-style-type none
  padding 0px
  margin 0px
  display block
  width 100%
  a
    text-decoration none

#skills-tag-container
  width 100%
  max-width 960px
  text-align center
  margin-top 3em

dl
  display inline-block
  padding-right 2.5%
  padding-bottom 2.5%
  max-width 295px
  vertical-align top
  text-align center

dt
  margin-bottom .75rem
  font-weight 900
  letter-spacing 3px
  text-align center
  font-size .9em
  text-transform uppercase
  padding-bottom 1.2em
  border-bottom 1px solid #c8c8c8

dd
  display inline-block
  border-radius 4px
  background-color #dedede
  padding 0px 0px
  margin .3em .2em
  &:hover
    background-color #ffd119
  a
    text-decoration none
    color #3a3a3a
    font-weight 600
    font-size .75rem
    display block
    padding 0.5em .75em

nav.social-2
  width 75%
  max-width 768px
  margin 0em auto 4em auto
  ul
    cf()
  li
    display block
    height 100px
    span(1/10)
    // background lightseagreen
    // background mediumseagreen
    display table
    table-layout fixed
    a
      color black
      display table-cell
      vertical-align middle
      text-align center
      width 100%
      &:hover
        color grey

nav.social
  ul
    cf()
  li
    display block
    height 100px
    span(1/10)
    background lightseagreen
    // background mediumseagreen
    display table
    table-layout fixed
    a
      color white
      display table-cell
      vertical-align middle
      text-align center
      width 100%
    &:hover
      background pink
      // background lightcoral

+below(mobile)
  nav.social, nav.social-2
    li
      span(1/4)
      background none
+above(mobile)
  nav.social, nav.social-2
    .telephone
      display none

.headshot
  display block
  margin auto
