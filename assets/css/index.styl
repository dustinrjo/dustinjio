.main-title
  font-family brand-sans
  font-weight 700

  color #3a3a3a
  font-size .8rem

  letter-spacing 3px
  max-width 250px
  display block
  margin auto
  text-align center
  padding 1em 0em
  max-width 100%

.logo-box
  margin auto

.nav-button
  background-color mediumseagreen
  padding 1.2em
  margin 2px 0px
  text-align center
  width 100%
